general {
    output_format = "i3bar"
    colors = true
    interval = 5
    color_good = "#009933"
    color_bad = "#cc0000"
    color_degraded = "#cccc00"
}

#order += "ipv6"
#order += "run_watch VPNC"
#order += "cpu_temperature 0"
order += "disk /"
order += "run_watch DHCP"
order += "path_exists VPN"
order += "wireless wlan0"
order += "ethernet eth0"
order += "battery 0"
order += "load"
order += "volume master"
order += "tztime local"

